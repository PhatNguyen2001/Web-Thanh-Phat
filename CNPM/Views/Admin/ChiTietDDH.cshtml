@model IEnumerable<CNPM.Models.ChiTietDDH>


@{
    ViewBag.Title = "ChiTietDDH";
    Layout = "~/Views/Shares/_LayoutAdmin.cshtml";
}

<h2 class="text-center">Chi tiết đơn đặt hàng </h2>


<table class="table">
    <tr class="text-center">
        <th>
            Mã đơn đặt hàng 
        </th>
        <th >
            Mã mặt hàng 
        </th>
        <th >
            Số lượng 
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Mã size
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="text-center">
        <td>
            @Html.DisplayFor(modelItem => item.MaDDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem=>item.MaMH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoLuong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonGia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaSize)
        </td>
        
    </tr>
}

</table>
