@model CNPM.Models.MatHang

@{
    ViewBag.Title = "SuaMatHang";
    Layout = "~/Views/Shares/_LayoutAdmin.cshtml";
}

<h2>Sửa sản phẩm </h2>


<div class=" m-xl-2">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TenMatHang)

            <div class="form-group">
                <div class="control-label col-md-2"> Mã mặt hàng </div>
                <div class="col-md-10">
                    <div style="font:18px;padding:5px 0 0 5px"> @Model.MaMH </div>
                </div>
            </div>
            <div class="form-group">
                <div class="control-label col-md-2">Tên mặt hàng  </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenMatHang, new { htmlAttributes = new { @class = "form-label col-md-2" } })
                    @Html.ValidationMessageFor(model => model.TenMatHang, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"> Số lượng tồn  </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-label col-md-2" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"> Đơn giá   </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DonGia, new { htmlAttributes = new { @class = "form-label" } })
                    @Html.ValidationMessageFor(model => model.DonGia, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="control-label col-md-2"> Loại   </div>
                <div class="col-md-10">
                    @Html.DropDownList("MaLoai")
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaSize, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MaSize, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MaSize, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HinhAnh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                    <input type="file" name="fileUpload" id="fileUpload" accept="image/*"
                           style="display:none;" />
                    <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                </div>
            </div>

         

        </div>
    }


</div>








